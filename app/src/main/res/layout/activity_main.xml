<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_Login_id"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/et_sp_bg"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_Login"
        app:layout_constraintStart_toStartOf="@+id/iv_Login"
        app:layout_constraintTop_toBottomOf="@+id/iv_Login" />

    <EditText
        android:id="@+id/et_Login_pw"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_sp_bg"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_Login_id"
        app:layout_constraintStart_toStartOf="@+id/et_Login_id"
        app:layout_constraintTop_toBottomOf="@+id/et_Login_id" />

    <TextView
        android:id="@+id/tv_Login_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="65dp"
        android:text="처음이신가요?"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/tv_Login_new"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Login" />

    <android.widget.Button
        android:id="@+id/btn_Login"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bt_bg"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_Login_pw"
        app:layout_constraintStart_toStartOf="@+id/et_Login_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_Login_pw" />

    <TextView
        android:id="@+id/tv_Login_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="135dp"
        android:text="회원가입"
        android:textColor="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_Login_q"
        app:layout_constraintTop_toBottomOf="@+id/btn_Login" />

    <ImageView
        android:id="@+id/iv_Login"
        android:layout_width="250dp"
        android:layout_height="205dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_logo" />

    <CheckBox
        android:id="@+id/cb_Login"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cb_bg"
        android:button="@android:color/transparent"
        android:checked="false"
        app:layout_constraintStart_toStartOf="@+id/btn_Login"
        app:layout_constraintTop_toBottomOf="@+id/btn_Login" />

    <TextView
        android:id="@+id/tv_Login_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="로그인 상태 유지"
        android:textColor="#989898"
        app:layout_constraintBottom_toBottomOf="@+id/cb_Login"
        app:layout_constraintStart_toEndOf="@+id/cb_Login"
        app:layout_constraintTop_toTopOf="@+id/cb_Login" />

</androidx.constraintlayout.widget.ConstraintLayout>